extends layout

block content
    html
        head
        body
            #fish.fish
            |
            #fish2.fish
            |
            #fish3.fish
            |
            .question-box
                #octo.octo
                |
                h1.mt-5 Notifications list
                    if (notifications.length)
                        ul
                        each notification in notifications
                            .label
                                li='User Id: ' + notification.userId + ', Post Id: ' + notification.postId + ', Created at: ' + notification.createdAt
                    else
                        h4.mt-5 No notifications found


            |
            style.
                body, html {
                    height: 100%;
                    padding: 0;
                    margin: 0;
                    font-family: 'Sniglet', cursive;
                    background-color: #98d4f3;
                }


                h2 {
                    color: #fff;
                }


                .question-box, .form-box, .thanks-msg-box {
                    width: 30%;
                    position: absolute;
                    top: 50%;
                    left: 50%;
                    transform: translate(-50%, -50%);
                    display: flex;
                    flex-direction: column;
                }


                .question-box {
                    align-items: center;
                    text-align: center;
                }


                input, textarea {
                    border-radius: 5px;
                    padding: 10px;
                    margin-bottom: 10px;
                    font-family: 'Sniglet', cursive;
                    font-size: 16px;
                    color: #808080;
                    background-color: #fff;
                    border: none;
                    outline: none;
                }

                textarea {
                    height: 200px;
                    resize: none;
                    overflow: auto;
                }

                .label {
                    color: #fff;
                    font-size: 24px;
                }

                /* Animation */
                @keyframes myfishanimation {
                    0% {
                        margin-left: -235px
                    }
                    70% {
                        margin-left: 100%;
                    }
                    100% {
                        margin-left: 100%;
                    }
                }

                @keyframes myoctoanimation {
                    from {
                        transform: translate3d(0, 0, 0);
                    }
                    to {
                        transform: translate3d(0, 200px, 0);
                    }
                }

                .fish {
                    background-image: url('http://www.geertjanhendriks.nl/codepen/form/fish.png');
                    width: 235px;
                    height: 104px;
                    margin-left: -235px;
                    position: absolute;
                    animation: myfishanimation 24s;
                    -webkit-animation: myfishanimation 24s;
                    animation-iteration-count: infinite;
                    -webkit-animation-iteration-count: infinite;
                    animation-timing-function: linear;
                    -webkit-animation-timing-function: linear;
                }

                #fish {
                    top: 120px;
                }

                #fish2 {
                    top: 360px;
                    animation-delay: 12s;
                    -webkit-animation-delay: 12s;
                }

                #fish3 {
                    top: 600px;
                    animation-delay: 6s;
                    -webkit-animation-delay: 6s;
                }

                .octo {
                    background-image: url('http://www.geertjanhendriks.nl/codepen/form/octo.png');
                    width: 66px;
                    height: 97px;
                    position: absolute;
                    right: -20%;
                    transform-origin: 50% 50%;
                    animation: myoctoanimation 2s linear alternate infinite;
                }
            |
